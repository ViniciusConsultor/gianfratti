<skin>
	<tab name="General">
		<param name="general_font" type="font" description="Font" default="arial"/>
	</tab>
	<tab name="Header">
		<param name="header_background" type="color" description="Header's background color" default="#FFFFFF"/>
		<param name="headertext_color" type="color" description="Header's title color" default="#00000FF"/>
		<param name="headerslogan_color" type="color" description="Header's slogan color" default="#0000FF"/>
	</tab>
	<tab name="Header highlighted">
		<param name="highlight_background" type="color" description="Highlighted background color" default="#e0ebf7"/>
		<param name="highlight_border" type="color" description="Highlighted border color" default="#9fbfda"/>
	</tab>
	<tab name="Page">
		<param name="page_background" type="color" description="Page background color" default="#EEEEEE"/>
		<param name="pagetitle_color" type="color" description="Pagetitle color" default="#000099"/>
	</tab>
	<tab name="Title">
		<param name="title_background" type="color" description=" Title background color" default="#000099"/>
		<param name="title_color" type="color" description="Title color" default="#FFFFFF"/>
	</tab>
	<tab name="Body">
		<param name="body_background" type="color" description="Background color" default="#CCCCFF"/>
		<param name="body_color" type="color" description="Normal text color" default="#000000"/>
		<param name="bodytext_color" type="color" description="Body text color" default="#000000"/>
		<param name="main_background" type="color" description="Main table background color" default="#FFFFFF"/>
		<param name="main_border" type="font" description="Main table border size" default="#FFFFFF"/>
	</tab>
	<tab name="Toolbar">
		<param name="toolbar_color" type="color" description="Text color" default="#FFFFFF"/>
		<param name="toolbar_background" type="color" description="Background color" default="#663399"/>
		<param name="toolbar_border" type="color" description="Toolbar's border color" default="#CC99FF"/>
		<param name="toolbar_highlight" type="color" description="Toolbar's highlight color" default="#FF0000"/>
	</tab>
	<tab name="Margin">
		<param name="margin_background" type="color" description="Background color" default="#CCCCCC"/>
		<param name="margin_color" type="color" description="Text color" default="#330066"/>
	</tab>
	<tab name="Menu">
		<param name="menutext_color" type="color" description="Text color in menu" default="#000000"/>
		<param name="menutext_highlight" type="color" description="Text color in menu when highlighted" default="#FF0000"/>
	</tab>
	<tab name="Left menu">
		<param name="menuheadleft_background" type="color" description="Menu header left background" default="#000099"/>
		<param name="menuheadleft_color" type="color" description="Menu header left text color" default="#FFFFFF"/>
		<param name="menuleft_background" type="color" description="Menu left background" default="#BBBBBB"/>
	</tab>
	<tab name="Right menu">
		<param name="menuheadright_background" type="color" description="Menu header right background" default="#000099"/>
		<param name="menuheadright_color" type="color" description="Menu header right text color" default="#FFFFFF"/>
		<param name="menuright_background" type="color" description="Menu right background" default="#BBBBBB"/>
	</tab>
	<tab name="Link">
		<param name="link_color" type="color" description="Link color" default="#000099"/>
		<param name="link_highlight" type="color" description="Link color highlighted" default="#000000"/>
	</tab>
	<tab name="Footer">
		<param name="footer_background" type="color" description="Footer background color" default="#000099"/>	
		<param name="footer_color" type="color" description="Footer text color" default="#FFFFFF"/>
	</tab>
	<tab name="Margin size">
		<param name="leftmargin_size" type="font" description="Left margin size" default="140"/>	
		<param name="rightmargin_size" type="font" description="Right margin size" default="140"/>	
	</tab>
</skin>
